package com.webcamp.dto;

public enum Difficulty {
	EASYMODE(15, "You are retarded and you can win!"), NORMAL(8, "You still can win!"), HARDCORE(
			6, "One mistake means loose."), NIGHTMARE(4, "You will fail!");

	private final int steps;
	private final String message;

	Difficulty(int s, String m) {
		this.steps = s;
		this.message = m;
	}

	public int getSteps() {
		return steps;
	}

	public String getMessage() {
		return message;
	}

}
