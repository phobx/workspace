import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;

public class FilesTwoMain {

	public static void main(String[] args) {
		File dir = new File("dir");
		dir.mkdirs();

		File f = new File(dir, "TimesTable.txt");

		try {
			if (!f.exists())
				f.createNewFile();

		} catch (IOException e) {
			e.printStackTrace();
		}

		int[] deadBeef = new int[] { 0xDE, 0xAD, 0xBE, 0xEF };
		try {
			FileOutputStream op = new FileOutputStream(f);
			op.write(0xDE);
			op.write(0xAD);
			op.write(0xBE);
			op.write(0xEF);
			op.close();

		} catch (IOException e) {
			e.printStackTrace();
		}

		// String table;
	}
}
