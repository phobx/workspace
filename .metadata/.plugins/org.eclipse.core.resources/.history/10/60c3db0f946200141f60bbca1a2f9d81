import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;

public class FilesTwoMain {

	public static void main(String[] args) {
		File dir = new File("dir");
		dir.mkdirs();

		File f = new File(dir, "TimesTable.txt");

		try {
			if (!f.exists())
				f.createNewFile();

		} catch (IOException e) {
			e.printStackTrace();
		}

		int[] deadBeef = new int[]{ 0xDE, 0xAD, 0xBE, 0xEF };
		try {
			
			FilesTwoMain.writeIntegers(f, deadBeef);

		} catch (IOException e) {
			e.printStackTrace();
		}

		// String table;
	}
	
	public static void writeIntegers(File f, int[] a) throws IOException {
		FileOutputStream op = new FileOutputStream(f);
		for (int i = 0; i < a.length; i++) {
			op.write(a[i]);
		}
		op.close();
}
